{
  "license": "MIT",
  "scripts": {
    "clean": "npm prune && del-cli ./packages/*/dist ./packages/*/tsconfig.tsbuildinfo",
    "compile:clean": "tsc --build tsconfig.build.json --clean",
    "compile:tests": "tsc --build tsconfig.test.json && tsc --build tsconfig.test.json --clean",
    "compile": "tsc --build tsconfig.build.json",
    "watch": "tsc --build tsconfig.build.json --watch",
    "release": "npm run clean && npm install && lerna publish from-package --exact --force-publish=unmock-core --include-merged-tags",
    "postinstall": "lerna run prepare && npm run lint-ts && npm run compile:tests && npm run compile",
    "format-check": "prettier-check '**/*.{js,ts}'",
    "format": "prettier '**/*.{js,ts}' --write",
    "lint": "npm run lint-ts",
    "lint-ts": "tslint --project packages/unmock/ --config tslint.json && tslint --project packages/unmock-cli/ --config tslint.json && tslint --project packages/unmock-core/ --config tslint.json && tslint --project packages/unmock-jest/ --config tslint.json",
    "lint-ts-fix": "tslint --fix --project packages/unmock/ --config tslint.json && tslint --fix --project packages/unmock-cli/ --config tslint.json && tslint --fix --project packages/unmock-core/ --config tslint.json && tslint --fix --project packages/unmock-jest/ --config tslint.json",
    "test": "jest --verbose",
    "test:debug": "DEBUG=unmock* jest --verbose",
    "test:clean": "jest --clearCache",
    "test:watch": "jest --verbose --watchAll",
    "testonly": "npm test",
    "test:ci": "npm run coverage -- --ci --maxWorkers=2  --reporters=default --reporters=jest-junit",
    "coverage": "npm test -- --coverage",
    "coverage:upload": "codecov",
    "version": "lerna version --no-git-tag-version",
    "unmock": "node packages/unmock-cli/dist/index.js",
    "generate-spy": "npx ts-node packages/unmock-core/scripts/generate-spy.ts > packages/unmock-core/src/service/spy/generated/index.ts && prettier '**/generated/*.{js,ts}' --write",
    "generate-spy-dry": "npx ts-node packages/unmock-core/scripts/generate-spy.ts"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/content-type": "^1.1.3",
    "@types/debug": "^4.1.4",
    "@types/glob": "^7.1.1",
    "@types/ini": "^1.3.30",
    "@types/jest": "^24.0.11",
    "@types/js-yaml": "^3.12.1",
    "@types/json-pointer": "^1.0.30",
    "@types/lodash": "^4.14.136",
    "@types/mitm": "^1.3.2",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^8.10.51",
    "@types/shimmer": "^1.0.1",
    "@types/uuid": "^3.4.5",
    "@types/xregexp": "^3.0.30",
    "axios": "^0.19.0",
    "codecov": "^3.3.0",
    "del-cli": "^1.1.0",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jest": "^24.7.1",
    "jest-junit": "^6.4.0",
    "lerna": "^3.13.4",
    "lodash.template": "^4.5.0",
    "prettier": "^1.18.2",
    "prettier-check": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unmock/unmock-js.git"
  },
  "homepage": "https://github.com/unmock/unmock-js",
  "bugs": {
    "url": "https://github.com/unmock/unmock-js/issues"
  },
  "dependencies": {
    "unmock": "file:packages/unmock",
    "unmock-cli": "file:packages/unmock-cli",
    "unmock-core": "file:packages/unmock-core"
  },
  "name": "unmock",
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  }
}

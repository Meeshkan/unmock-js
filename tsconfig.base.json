{
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*" : ["types/*"]
    },
    "lib": ["dom", "es2015"]
  },
  "exclude": ["node_modules"]
}
